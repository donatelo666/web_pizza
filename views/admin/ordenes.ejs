<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Panel de Ordenes</title>

    <!--union con css, fuentes y bootstrap,color-->
    <link rel="stylesheet" href="/css/ordenes.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lemon&family=Sigmar&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />

    <style>
      body {
        background-color: #58c06e;
      }
    </style>
  </head>

  <body>
    <!--navbar de partials-->
    <%- include('../partials/navbarAdmin') %>

    <!--tabla de ordenes con ejs itera en cada orden para obtener datos-->
    <div class="container mt-4">
      <h2 class="text-white">üë• Lista de Ordenes</h2>

      <div class="card bg-dark text-white mt-3">
        <div class="card-body">
          <table class="table table-dark table-striped table-hover mb-0">
            <thead>
              <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Tama√±o</th>
                <th>Sabor</th>
                <th>Usuario id</th>
              </tr>
            </thead>
            <tbody>
              <% ordenes.forEach(orden => { %>
              <tr>
                <td><%= orden.id %></td>
                <td><%= orden.nombre %></td>
                <td><%= orden.telefono %></td>
                <td><%= orden.Tamano %></td>
                <td><%= orden.sabor %></td>
                <td><%= orden.usuario_id %></td>

                <td>
                  <!--boton para formulario editar y borrar-->
                  <a
                    href="/admin/ordenes?editar=<%= orden.id %>#formEditarOrden"
                    class="btn btn-sm btn-warning"
                    >‚úèÔ∏è Editar</a
                  >
                  <form
                    action="/admin/ordenes/<%= orden.id %>?_method=DELETE"
                    method="POST"
                    class="d-inline"
                  >
                    <!--boton borrar-->
                    <button
                      type="submit"
                      class="btn btn-sm btn-danger"
                      onclick="return confirmarEliminacion('¬øEliminar esta orden?')"
                    >
                      üóëÔ∏è Borrar
                    </button>
                  </form>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <!--formulario editar con ruta override , boton guardar-->
      <% if (ordenParaEditar) { %>
      <hr class="text-white" />
      <h3 class="text-white">‚úèÔ∏è Editar Orden</h3>
      <form
        action="/admin/ordenes/<%= ordenParaEditar.id %>?_method=PUT"
        method="POST"
        class="bg-dark p-3 rounded text-white"
        id="formEditarOrden"
      >
        <div class="mb-3">
          <label>Nombre</label>
          <input
            type="text"
            name="nombre"
            value="<%= ordenParaEditar.nombre %>"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label>Telefono</label>
          <input
            type="text"
            name="telefono"
            value="<%= ordenParaEditar.telefono %>"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label>Tama√±o</label>
          <input
            type="text"
            name="tamano"
            value="<%= ordenParaEditar.tamano %>"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label>Sabor</label>
          <input
            type="text"
            name="sabor"
            value="<%= ordenParaEditar.sabor %>"
            class="form-control"
            required
          />
        </div>
        <button type="submit" class="btn btn-success">
          üíæ Guardar cambios
        </button>
      </form>
      <% } %>
    </div>

    <!--alert de confirmar eliminacion-->
    <script>
      function confirmarEliminacion() {
        const confirmado = confirm("¬øEliminar este orden?");
        if (confirmado) {
          alert("‚úÖ Orden eliminada con √©xito");
          return true; // permite que el formulario se env√≠e
        } else {
          alert("‚ùå Eliminaci√≥n cancelada");
          return false; // evita que se env√≠e el formulario
        }
      }
    </script>
    <!--cerrar sesion con exito -->
    <div id="notificacion" class="oculto"></div>

    <!--script log out -->
    <script src="/js/logout.js"></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>

    <% if (mensaje) { %>
    <script>
      // Mostrar el mensaje como alerta
      alert("<%= mensaje %>");

      // Si existe un formulario de edici√≥n, lo limpia
      document.getElementById("formEditarOrden")?.reset();
    </script>
    <% } %>
  </body>
</html>
