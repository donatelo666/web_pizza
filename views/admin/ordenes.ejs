            <tbody>
              <% ordenes.forEach(orden => { %>
              <tr>
                <td><%= orden.id %></td>
                <td><%= orden.nombre %></td>
                <td><%= orden.telefono %></td>
                <td><%= orden.Tamano %></td>
                <td><%= orden.sabor %></td>
                <td><%= orden.usuario_id %></td>

                <td>
                  <a
                    href="/admin/ordenes?editar=<%= orden.id %>#formEditarOrden"
                    class="btn btn-sm btn-warning"
                    >âœï¸ Editar</a
                  >
                  <form
                    action="/admin/ordenes/<%= orden.id %>?_method=DELETE"
                    method="POST"
                    class="d-inline"
                  >
