    <!--formulario para eliminar con campo id y boton submit, pattern -->
    <form id="eliminarOrden">
      <h3>Eliminar mi orden</h3>

      <label for="idOrden">Id de la orden:</label>
      <input
        type="number"
        id="idOrden"
        name="Orden_id"
