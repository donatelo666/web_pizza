        type="text"
        id="telefono"
        name="telefono"
        required
        pattern="[0-9]{10,10}"
        placeholder="10 digitos"
      /><br /><br />

      <label for="tamano">Tama√±o:</label>

      <select id="tamano" name="tamano" required pattern="[A-Za-z]{4,10}">
        <option value="">-- Selecciona una Tama√±o --</option>
        <option value="personal">Personal</option>
