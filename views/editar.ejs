    <!--formulario para agregar al carrito y  enviar orden de varias pizzas, con pattern, required
    select en dos inputs-->
    <form id="form-pizza">
      <h3>Carrito de pizzas</h3>
      <br />

      <label for="nombre">Nombre:</label>
      <input
        type="text"
        id="nombre"
        name="nombre"
        required
        pattern="[A-Za-z0-9 ]{4,20}"
        placeholder="Minimo 4 y maximo 20 caracteres"
      /><br /><br />

      <label for="telefono">Tel√©fono celular:</label>
